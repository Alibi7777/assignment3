<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Products</title>
  </head>
  <body>
    <h1>Product List</h1>
    <% if (error) { %>
    <p style="color: red"><%= error %></p>
    <% } else { %>
    <ul>
      <% products.forEach(product => { %>
      <li>
        <h3><%= product.name %></h3>
        <p>Price: $<%= product.price %></p>
        <img src="<%= product.image %>" width="100" />
      </li>
      <% }); %>
    </ul>
    <% } %>
  </body>
</html>
